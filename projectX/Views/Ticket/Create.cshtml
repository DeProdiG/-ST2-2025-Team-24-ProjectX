@model projectX.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<h1>Create Ticket</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Price" class="control-label">Base Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" min="1" value="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserType" class="control-label">User Type</label>
        <select asp-for="UserType" class="form-control" asp-items="ViewBag.UserTypes">
            <option value="">-- Select User Type --</option>
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScreeningId" class="control-label">Screening</label>
        <select asp-for="ScreeningId" class="form-control" asp-items="ViewBag.ScreeningId">
            <option value="">-- Select Screening --</option>
        </select>
        <span asp-validation-for="ScreeningId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

<!-- Pattern Demonstration Section -->
<div class="mt-5">
    <h3>Pattern Demonstration</h3>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Test Pricing Strategies</h5>
            <div class="row">
                <div class="col-md-3">
                    <input type="number" id="basePrice" class="form-control" placeholder="Base Price" value="10.00" step="0.01">
                </div>
                <div class="col-md-2">
                    <input type="number" id="quantity" class="form-control" placeholder="Quantity" value="1" min="1">
                </div>
                <div class="col-md-3">
                    <select id="userType" class="form-control">
                        <option value="standard">Standard</option>
                        <option value="student">Student</option>
                        <option value="senior">Senior</option>
                        <option value="premium">Premium</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="notificationType" class="form-control">
                        <option value="Email">Email</option>
                        <option value="SMS">SMS</option>
                        <option value="Push">Push</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="button" id="calculatePrice" class="btn btn-info">Calculate</button>
                </div>
            </div>
            <div id="priceResult" class="mt-2"></div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="ViewLogs" class="btn btn-outline-primary">View System Logs</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('calculatePrice').addEventListener('click', function () {
            const basePrice = parseFloat(document.getElementById('basePrice').value);
            const quantity = parseInt(document.getElementById('quantity').value);
            const userType = document.getElementById('userType').value;
            const notificationType = document.getElementById('notificationType').value;

            fetch(`/Ticket/CalculatePrice?basePrice=${basePrice}&quantity=${quantity}&userType=${userType}&notificationType=${notificationType}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('priceResult').innerHTML = `
                                <div class="alert alert-success">
                                    <strong>Calculated Price:</strong> $${data.finalPrice.toFixed(2)}<br>
                                    <small>Base: $${data.basePrice.toFixed(2)} × ${data.quantity} (${data.userType})</small>
                                </div>
                            `;
                })
                .catch(error => {
                    document.getElementById('priceResult').innerHTML = `
                                <div class="alert alert-danger">
                                    Error calculating price
                                </div>
                            `;
                });
        });
    </script>
}