@model projectX.Models.Actor
@{
    ViewData["Title"] = "Remove actor";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Actor - Movie Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --danger-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --card-bg: rgba(255, 255, 255, 0.95);
            --card-border: rgba(255, 255, 255, 0.3);
            --shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--danger-gradient);
            min-height: 100vh;
            padding: 0;
            margin: 0;
        }

        .header-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            padding: 7rem 0 2rem 0;
            margin: 0;
            width: 100%;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .delete-section {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }

        .glass-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            border: 1px solid var(--card-border);
            box-shadow: var(--shadow);
            overflow: hidden;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

        .delete-header {
            background: var(--danger-gradient);
            color: white;
            padding: 2.5rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .delete-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            }

        .delete-body {
            padding: 2.5rem;
        }

        .warning-banner {
            background: var(--warning-gradient);
            color: white;
            padding: 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

            .warning-banner::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='20' cy='20' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            }

        .actor-details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .detail-card {
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.5rem;
            transition: var(--transition);
        }

            .detail-card:hover {
                transform: translateY(-3px);
                border-color: #cbd5e1;
            }

        .detail-label {
            font-size: 0.875rem;
            font-weight: 600;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1e293b;
        }

        .movie-count-badge {
            background: var(--secondary-gradient);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .actor-avatar-large {
            width: 80px;
            height: 80px;
            background: var(--secondary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0 auto 1rem auto;
        }

        .btn-danger-modern {
            background: var(--danger-gradient);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: var(--transition);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }

            .btn-danger-modern:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
            }

        .btn-outline-modern {
            border: 2px solid #64748b;
            color: #64748b;
            background: transparent;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: var(--transition);
        }

            .btn-outline-modern:hover {
                border-color: #475569;
                color: #475569;
                background: rgba(100, 116, 139, 0.05);
                transform: translateY(-2px);
            }

        .delete-actions {
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
            margin-top: 1rem;
        }

        @@media (max-width: 768px) {
            .delete-body {
                padding: 2rem 1.5rem;
            }

            .delete-header {
                padding: 2rem 1.5rem;
            }

            .actor-details-grid {
                grid-template-columns: 1fr;
            }

            .btn-danger-modern, .btn-outline-modern {
                width: 100%;
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">Delete Actor</h1>
                    <p class="lead mb-0">Remove actor from collection</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4">
                        <i class="bi bi-arrow-left me-2"></i> Back to Actors
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Section -->
    <div class="delete-section">
        <div class="container">
            <div class="glass-card">
                <div class="delete-header position-relative">
                    <div class="position-relative z-1">
                        <h2 class="h3 mb-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
                        </h2>
                        <p class="mb-0 opacity-90">This action cannot be undone</p>
                    </div>
                </div>

                <div class="delete-body">
                    @{
                        var age = (int)((DateTime.Now - Model.DateOfBirth).Days / 365.25);
                        var initials = $"{Model.Name?[0]}{Model.Surname?[0]}";
                        var movieCount = Model.MovieActors?.Count ?? 0;
                    }

                    <!-- Actor Avatar -->
                    <div class="text-center mb-4">
                        <div class="actor-avatar-large">
                            @initials
                        </div>
                        <h4 class="text-dark">@Model.Name @Model.Surname</h4>
                    </div>

                    <!-- Warning Banner -->
                    <div class="warning-banner position-relative">
                        <div class="position-relative z-1">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-exclamation-circle-fill me-3" style="font-size: 2rem;"></i>
                                <div>
                                    <h4 class="mb-2">Irreversible Action</h4>
                                    <p class="mb-0">
                                        You are about to permanently delete <strong>"@Model.Name @Model.Surname"</strong>
                                        from your actor database. This action cannot be undone.
                                    </p>
                                    @if (movieCount > 0)
                                    {
                                        <div class="mt-2">
                                            <span class="movie-count-badge">
                                                <i class="bi bi-film"></i>
                                                Appears in @movieCount @(movieCount == 1 ? "movie" : "movies")
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actor Details -->
                    <h5 class="text-muted mb-3">
                        <i class="bi bi-info-circle me-2"></i>Actor Details
                    </h5>

                    <div class="actor-details-grid">
                        <div class="detail-card">
                            <div class="detail-label">Full Name</div>
                            <div class="detail-value">@Model.Name @Model.Surname</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Date of Birth</div>
                            <div class="detail-value">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Age</div>
                            <div class="detail-value">@age years old</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Movie Appearances</div>
                            <div class="detail-value">
                                @if (movieCount > 0)
                                {
                                    <span class="movie-count-badge">
                                        @movieCount @(movieCount == 1 ? "movie" : "movies")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No movie appearances</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <form asp-action="Delete" class="delete-actions">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3 flex-wrap">
                            <button type="submit" class="btn btn-danger-modern flex-fill">
                                <i class="bi bi-trash me-2"></i>Delete Permanently
                            </button>
                            <a asp-action="Index" class="btn btn-outline-modern flex-fill">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add shake animation to delete button for emphasis
            const deleteBtn = document.querySelector('.btn-danger-modern');

            if (deleteBtn) {
                deleteBtn.addEventListener('mouseenter', function () {
                    this.style.animation = 'shake 0.5s ease-in-out';
                });

                deleteBtn.addEventListener('animationend', function () {
                    this.style.animation = '';
                });
            }

            // Add CSS for shake animation
            const style = document.createElement('style');
            style.textContent = `
        @@keyframes shake {
                            0%, 100% { transform: translateX(0) translateY(-3px); }
                            25% { transform: translateX(-5px) translateY(-3px); }
                            75% { transform: translateX(5px) translateY(-3px); }
                        }
                    `;
            document.head.appendChild(style);

            // Add entrance animation to card
            const card = document.querySelector('.glass-card');
            if (card) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 200);
            }
        });
    </script>
</body>
</html>