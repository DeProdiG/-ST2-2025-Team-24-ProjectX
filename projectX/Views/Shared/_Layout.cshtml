<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema ProjectX</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid px-0">
                <div class="container">
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-camera-reels me-2"></i>Cinema ProjectX
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Screenings" asp-action="Index">Screenings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Ticket" asp-action="Index">Tickets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reviews" asp-action="Index">Reviews</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Actors" asp-action="Index">Actors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cinemas" asp-action="Index">Cinemas</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Ai" asp-action="Index">
                                    <i class="bi bi-robot me-1"></i>AI Assistant
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-full bg-dark text-white py-4 mt-5">
        <div class="container-fluid px-0">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <h5 class="fw-bold mb-3 text-white">
                            <i class="bi bi-camera-reels me-2"></i>Cinema ProjectX
                        </h5>
                        <p class="text-white-50">Experience cinema like never before with state-of-the-art technology and unparalleled comfort.</p>
                        <div class="social-links">
                            <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="text-white"><i class="bi bi-youtube"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-2 mb-4 mb-lg-0">
                        <h6 class="fw-bold mb-3 text-white">Quick Links</h6>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none">Home</a></li>
                            <li><a asp-controller="Movies" asp-action="Index" class="text-white-50 text-decoration-none">Movies</a></li>
                            <li><a asp-controller="Screenings" asp-action="Index" class="text-white-50 text-decoration-none">Screenings</a></li>
                            <li><a asp-controller="Ticket" asp-action="Index" class="text-white-50 text-decoration-none">Tickets</a></li>
                            <li><a asp-controller="Cinemas" asp-action="Index" class="text-white-50 text-decoration-none">Cinemas</a></li>
                            <li><a asp-controller="Actors" asp-action="Index" class="text-white-50 text-decoration-none">Actors</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 mb-4 mb-lg-0">
                        <h6 class="fw-bold mb-3 text-white">Support</h6>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white-50 text-decoration-none">Contact Us</a></li>
                            <li><a href="#" class="text-white-50 text-decoration-none">FAQ</a></li>
                            <li><a href="#" class="text-white-50 text-decoration-none">Privacy Policy</a></li>
                            <li><a href="#" class="text-white-50 text-decoration-none">Terms of Service</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3">
                        <h6 class="fw-bold mb-3 text-white">Newsletter</h6>
                        <p class="text-white-50 small mb-3">Subscribe to get updates on new movies and special offers.</p>
                        <div class="input-group">
                            <input type="email" class="form-control form-control-sm" placeholder="Your email">
                            <button class="btn btn-primary btn-sm" type="button">Subscribe</button>
                        </div>
                    </div>
                </div>
                <hr class="my-4 bg-secondary">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="text-white mb-0">&copy; 2024 Cinema ProjectX. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p class="text-white mb-0">Premium Cinema Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Styles {
        <style>
            body {
            margin-bottom: 80px;
            }
        </style>
    }
</body>
</html>