@model projectX.Models.Movie
@{
    ViewData["Title"] = "Add movie";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Movie - Movie Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            border: 0;
            box-sizing: border-box;
        }

        html, body {
            margin: 0 !important;
            padding: 0 !important;
            height: 100%;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
            min-height: 100vh;
        }

        .header-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            padding: 7rem 0 2rem 0;
            margin: 0;
            width: 100%;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .form-container {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .movie-form-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            border: 1px solid rgba(255, 255, 255, 0.3);
            overflow: hidden;
            width: 100%;
            max-width: 800px;
        }

        .form-header {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .form-body {
            padding: 2.5rem;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 2px solid #e2e8f0;
            padding: 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

            .form-control:focus, .form-select:focus {
                border-color: #6366f1;
                box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
                background: white;
            }

        .form-control-lg {
            font-size: 1.1rem;
            padding: 1.2rem;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
                background: linear-gradient(135deg, #4f46e5, #4338ca);
            }

        .btn-outline-custom {
            border: 2px solid #64748b;
            color: #64748b;
            background: transparent;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-outline-custom:hover {
                border-color: #475569;
                color: #475569;
                background: rgba(100, 116, 139, 0.1);
                transform: translateY(-2px);
            }

        .form-actions {
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
            margin-top: 1rem;
        }

        @@media (max-width: 768px) {
            .form-body {
                padding: 1.5rem;
            }

            .form-header {
                padding: 1.5rem;
            }

            .btn-primary-custom, .btn-outline-custom {
                width: 100%;
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">Add New Movie</h1>
                    <p class="lead mb-0">Create a new movie entry</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4">
                        <i class="bi bi-arrow-left me-2"></i> Back to Movies
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Container -->
    <div class="form-container">
        <div class="container">
            <div class="movie-form-card">
                <div class="form-header">
                    <h2 class="h3 mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Add New Movie
                    </h2>
                    <p class="mb-0 mt-2 opacity-90">Fill in the details to add a new movie to your collection</p>
                </div>

                <div class="form-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div class="row g-4">
                            <!-- Title -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Movie Title" />
                                    <label asp-for="Title" class="form-label">
                                        <i class="bi bi-film me-2"></i>Movie Title
                                    </label>
                                    <span asp-validation-for="Title" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Duration & Release Date -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Duration" class="form-control" placeholder="Duration" />
                                    <label asp-for="Duration" class="form-label">
                                        <i class="bi bi-clock me-2"></i>Duration (minutes)
                                    </label>
                                    <span asp-validation-for="Duration" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ReleaseDate" type="date" class="form-control" placeholder="Release Date" />
                                    <label asp-for="ReleaseDate" class="form-label">
                                        <i class="bi bi-calendar me-2"></i>Release Date
                                    </label>
                                    <span asp-validation-for="ReleaseDate" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Rating & Actors -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Rating" class="form-control" placeholder="Rating" min="1" max="5" step="0.1" />
                                    <label asp-for="Rating" class="form-label">
                                        <i class="bi bi-star me-2"></i>Rating (1-5)
                                    </label>
                                    <span asp-validation-for="Rating" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select name="selectedActors" class="form-select" multiple>
                                        <option value="">-- Select Actors --</option>
                                        @if (ViewBag.ActorId != null)
                                        {
                                            foreach (SelectListItem actor in ViewBag.ActorId)
                                            {
                                                <option value="@actor.Value">@actor.Text</option>
                                            }
                                        }
                                    </select>
                                    <label class="form-label">
                                        <i class="bi bi-people me-2"></i>Actors
                                    </label>
                                    <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple actors</small>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="form-actions">
                            <div class="d-flex gap-3 flex-wrap">
                                <button type="submit" class="btn btn-primary-custom flex-fill">
                                    <i class="bi bi-plus-circle me-2"></i>Create Movie
                                </button>
                                <a asp-action="Index" class="btn btn-outline-custom flex-fill">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Enhanced form interactions
        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('.form-control, .form-select');
            inputs.forEach(input => {
                // Add focus effects
                input.addEventListener('focus', function () {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function () {
                    if (this.value === '') {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });

            // Set minimum date to today for release date
            const releaseDateInput = document.querySelector('input[type="date"]');
            if (releaseDateInput) {
                const today = new Date().toISOString().split('T')[0];
                releaseDateInput.setAttribute('min', today);
            }
        });
    </script>
</body>
</html>