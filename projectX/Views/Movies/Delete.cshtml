@model projectX.Models.Movie
@{
    ViewData["Title"] = "Remove movie";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Movie - Movie Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            border: 0;
            box-sizing: border-box;
        }

        html, body {
            margin: 0 !important;
            padding: 0 !important;
            height: 100%;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #8b0000 0%, #8b0000 100%);
            min-height: 100vh;
        }

        .header-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            padding: 7rem 0 2rem 0;
            margin: 0;
            width: 100%;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .delete-container {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .delete-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            border: 1px solid rgba(255, 255, 255, 0.3);
            overflow: hidden;
            width: 100%;
            max-width: 700px;
        }

        .delete-header {
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .delete-body {
            padding: 2.5rem;
        }

        .warning-alert {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            border: 2px solid #f59e0b;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .movie-details-card {
            background: #f8fafc;
            border-radius: 12px;
            padding: 2rem;
            border: 2px solid #e2e8f0;
            margin-bottom: 2rem;
        }

        .detail-item {
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e2e8f0;
        }

            .detail-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .detail-label {
            font-weight: 600;
            color: #475569;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .detail-value {
            font-size: 1.1rem;
            color: #1e293b;
            font-weight: 500;
        }

        .rating-badge {
            background: linear-gradient(135deg, #6366f1, #4f46e5);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            display: inline-block;
        }

        .btn-danger-custom {
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
        }

            .btn-danger-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(220, 38, 38, 0.4);
                background: linear-gradient(135deg, #b91c1c, #991b1b);
            }

        .btn-outline-custom {
            border: 2px solid #64748b;
            color: #64748b;
            background: transparent;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-outline-custom:hover {
                border-color: #475569;
                color: #475569;
                background: rgba(100, 116, 139, 0.1);
                transform: translateY(-2px);
            }

        .delete-actions {
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
            margin-top: 1rem;
        }

        @@media (max-width: 768px) {
            .delete-body {
                padding: 1.5rem;
            }

            .delete-header {
                padding: 1.5rem;
            }

            .btn-danger-custom, .btn-outline-custom {
                width: 100%;
                margin-bottom: 1rem;
            }

            .movie-details-card {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">Delete Movie</h1>
                    <p class="lead mb-0">Remove movie from collection</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4">
                        <i class="bi bi-arrow-left me-2"></i> Back to Movies
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Container -->
    <div class="delete-container">
        <div class="container">
            <div class="delete-card">
                <div class="delete-header">
                    <h2 class="h3 mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                    </h2>
                    <p class="mb-0 mt-2 opacity-90">This action cannot be undone</p>
                </div>

                <div class="delete-body">
                    <!-- Warning Alert -->
                    <div class="warning-alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-circle-fill text-warning me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <h4 class="alert-heading text-warning mb-2">Warning: Irreversible Action</h4>
                                <p class="mb-0 text-warning">You are about to permanently delete <strong>"@Model.Title"</strong> from your movie collection. This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Movie Details -->
                    <div class="movie-details-card">
                        <h5 class="text-muted mb-4">
                            <i class="bi bi-info-circle me-2"></i>Movie Details
                        </h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Title</div>
                                    <div class="detail-value">@Model.Title</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Duration</div>
                                    <div class="detail-value">@Model.Duration minutes</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Release Date</div>
                                    <div class="detail-value">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Rating</div>
                                    <div class="detail-value">
                                        <span class="rating-badge">
                                            @Model.Rating <i class="bi bi-star-fill ms-1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <form asp-action="Delete" class="delete-actions">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3 flex-wrap">
                            <button type="submit" class="btn btn-danger-custom flex-fill">
                                <i class="bi bi-trash me-2"></i>Delete Permanently
                            </button>
                            <a asp-action="Index" class="btn btn-outline-custom flex-fill">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>